                "args": ["build", "--bin=mon2y_rs", "--package=mon2y_rs"],
                "filter": {
                    "name": "mon2y_rs",
                    "kind": "bin"
                }
            },
            "args": ["c4", "-p", "h,m", "--iterations", "100", "-vvvv"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
