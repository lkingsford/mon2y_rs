            "name": "Debug unit tests in library 'mon2y_rs'",
            "cargo": {
                "args": ["test", "--no-run", "--lib", "--package=mon2y_rs"],
                "filter": {
                    "name": "mon2y_rs",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'mon2y_rs'",
